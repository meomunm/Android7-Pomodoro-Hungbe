<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/screen_edge"
    android:paddingStart="@dimen/screen_edge"
    tools:context="techkids.vn.android7pomodoro.fragments.TaskTimerFragment">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bcgdv.asia.lib.ticktock.TickTockView
            android:id="@+id/ticktock_countdown"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            app:tickAutoFitText="true"
            app:tickDotRadius="6dp"
            app:tickEmptyRingColor="@android:color/white"
            app:tickFillRingColor="@color/colorPrimary"
            app:tickMiddleColor="#333333"
            app:tickMoveCounterClockwise="true"
            app:tickRingThickness="3dp"
            app:tickTextColor="#CCCCCC" />
        <View
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_play"
                app:srcCompat="@drawable/ic_play_arrow_24px"
                android:layout_marginTop="@dimen/button_margin_top"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />

            <ImageButton
                android:id="@+id/ib_pause"
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/ic_stop_black_24px"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/button_margin_top"
                android:layout_marginBottom="@dimen/button_margin_bottom" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
